	xthickness = 0
	ythickness = 0

	engine "murrine" 
	{
		contrast=1.3 
		gradient_shades     = {1.2,1.1,0.96,1.}

		lightborder_shade   = 1.65   # sets lightborder amount for buttons or widgets
		lightborderstyle    = 1

		glow_shade 	    = 1.6
		glowstyle 	    = 0

		roundness = 15
	}

